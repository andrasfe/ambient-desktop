# Database
DATABASE_URL=postgresql+asyncpg://ambient:ambient@localhost:5432/ambient

# LLM Configuration
# Option 1: Cloud API (OpenRouter)
# OPENROUTER_API_KEY=sk-or-v1-your-key-here
# OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
# OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Option 2: Local LLM with Ollama (RECOMMENDED FOR PRIVACY)
# Install: curl -fsSL https://ollama.com/install.sh | sh
# Pull model: ollama pull llama3.1:8b
# OPENROUTER_API_KEY=ollama
# OPENROUTER_BASE_URL=http://localhost:11434/v1
# OPENROUTER_MODEL=llama3.1:8b

# Option 3: LMStudio (PRIVACY MODE - no API key needed)
# Download LMStudio from https://lmstudio.ai
# Load a model and start the local server
OPENROUTER_API_KEY=lmstudio
OPENROUTER_BASE_URL=http://localhost:1234/v1
OPENROUTER_MODEL=local-model

# Privacy Mode - automatically enabled for local LLMs (Ollama, LMStudio)
# When using cloud API, set to true to minimize data sent to LLM
PRIVACY_MODE=true

# Cohere Embeddings
COHERE_API_KEY=your-cohere-key-here
COHERE_MODEL=embed-english-v3.0

# Scheduler
SCHEDULER_INTERVAL_SECONDS=30

# MCP Servers (JSON array)
# Example: [{"name": "filesystem", "command": "mcp-server-filesystem", "args": ["/tmp"]}]
MCP_SERVERS=[]

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Agent Settings
MAX_CONCURRENT_AGENTS=5

# Browser Settings
# To take over your existing browser session (e.g., you're logged into LinkedIn):
# 1. Start Chrome with: google-chrome --remote-debugging-port=9222
# 2. Uncomment the line below:
# BROWSER_CDP_URL=http://localhost:9222

# Or use a persistent profile (agent remembers logins):
# BROWSER_USER_DATA_DIR=~/.ambient-browser-profile

# Run browser in headless mode (ignored when using CDP)
BROWSER_HEADLESS=true

